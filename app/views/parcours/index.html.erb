<p id="notice"><%= notice %></p>

<h1>Parcours <%= @titre_parcours %></h1>

<section class="section__parcours">
  <% @parcours.each do |parcours| %>
    <div class="card__parcours">
      <%= link_to parcours_path(parcours), class: "card__link" do %>
        <div class="card__content">
        <h3><%= parcours.nom_entreprise %></h3>
        <div class="card__meta">Publi√© le <time><%= parcours.date_notification_marche %></time> Finit le <time><%= parcours.date_fin_clause_sociale %></time></div>
          <%= parcours.details_taches_proposees_parcours %>
        </div>
        <div class="card__extra">
          <div class="label label--active"><%= parcours.heures_parcours %>h</div>
          <div class="label label--inactive"><%= parcours.academie_parcours %></div>
          <div class="label"><%= parcours.domaine_activite_parcours%></div>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
<p>
<%= link_to 'Ajouter un parcours', new_parcours_path %>
</p>

<p>
<%= link_to 'Retour', root_path %>
</p>
